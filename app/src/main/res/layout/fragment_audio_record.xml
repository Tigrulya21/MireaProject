<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AudioRecord">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt"
            android:layout_width="145dp"
            android:layout_height="37dp"
            android:layout_marginStart="133dp"
            android:layout_marginTop="42dp"
            android:layout_marginEnd="133dp"
            android:text="Мысли вслух"
            android:textColor="#120F0F"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/recordButton"
            android:layout_width="161dp"
            android:layout_height="46dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="251dp"
            android:text="Запись"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <Button
            android:id="@+id/playButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="228dp"
            android:layout_marginEnd="16dp"
            android:text="Воспроизвести"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="364dp"
            android:layout_height="69dp"
            android:layout_marginTop="20dp"
            android:text="При &quot;тихо сам собой я веду беседу&quot; - нажмите запись"
            android:textColor="#100D0D"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="382dp"
            android:layout_height="54dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="17dp"
            android:text="При желании прослушать свои умные мысли - нажмите воспроизвести"
            android:textColor="#0E0D0D"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recordButton" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>