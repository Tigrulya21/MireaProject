<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DataFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:background="#295991"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Surf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:fontFamily="casual"
            android:text="SURF LAKES "
            android:textAlignment="center"
            android:textColor="#FEFEFE"
            android:textColorHint="#222627"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/Sun"
            android:layout_width="205dp"
            android:layout_height="170dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/surf_lakes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Text1"
            android:layout_width="169dp"
            android:layout_height="141dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="16dp"
            android:text="Surf Lakes — это четвертый в мире концепт волнового бассейна, который находится в Квинсленде в Австралии."
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view2"
            android:layout_width="397dp"
            android:layout_height="215dp"
            android:layout_marginTop="150dp"
            android:background="#295991"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <TextView
            android:id="@+id/Text2"
            android:layout_width="368dp"
            android:layout_height="170dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:text="В отличие от своих предшественников Wavegarden, Kelly Slater Surf Ranch, и BSR Surf Resort, Surf Lakes использует огромный 1400-тонный поршень – это эквивалент трех Боингов 747. В теории, это достаточно простая концепция – металлический поршень при сопротивлении от удара по воде образует кольцо водной массы, которое начинает движение от эпицентра, и идет пока не ударяется о специально созданную береговую линию, образуя волны для серфинга различного типа сложности."
            android:textColor="#F1EDED"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Work" />

        <TextView
            android:id="@+id/Work"
            android:layout_width="238dp"
            android:layout_height="20dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="155dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Как это работает? "
            android:textColor="#F3EFEF"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <ImageView
            android:id="@+id/Wave"
            android:layout_width="203dp"
            android:layout_height="153dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/wave"
            app:layout_constraintBottom_toTopOf="@+id/imageView6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view2" />

        <View
            android:id="@+id/view4"
            android:layout_width="177dp"
            android:layout_height="256dp"
            android:layout_marginStart="7dp"
            android:layout_marginBottom="28dp"
            android:background="#295991"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="168dp"
            android:layout_height="216dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="29dp"
            android:text="Посетители комплекса могут выбирать между «The Beach Break» (мягкая волна для начинающих серферов), «Occy's» (высота волны до 2 метров), «The Point» (быстрая и сложная волна), и «The Wedge» (продвинутая трубящаяся волна)."
            android:textColor="#FEFEFE"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="116dp"
            android:layout_height="32dp"
            android:layout_marginStart="36dp"
            android:text="Виды волн"
            android:textAlignment="viewStart"
            android:textColor="#FEFEFE"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/textView6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Text2"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="203dp"
            android:layout_height="147dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/wave2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Wave" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>